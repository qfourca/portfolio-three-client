{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "lib",
		"strict": true,
		"skipLibCheck": true,
		"module": "commonjs",
		"target": "ESNext",
		"downlevelIteration": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"paths": {
			"@/*": ["./packages/src/*"],
		},
		"typeRoots": [
			"./node_modules/@types",
			"@types",
		],
	},
	"include": [
		"./index.ts",
		"./vite.config.ts",
		"./.ci/**/*",
		"./packages/public/**/*",
		"./packages/src/**/*",
		"./packages/test/**/*",
		"./eslintrc",
	],
	"exclude": [
		"node_modules",
		"dist"
	],
}
